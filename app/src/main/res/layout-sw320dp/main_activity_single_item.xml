<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMainSingleItem"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="10sp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/deepSkyBlue"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/SingleItemMainRvOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/ivDescription"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvMain"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginStart="10sp"
                android:text="@string/tvMain"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvDescription"
            android:layout_below="@id/SingleItemMainRvOne"
            android:textSize="12sp" />

        <TextView
            android:layout_below="@id/tvDescription"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvClick"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="30dp"
            android:textSize="8sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>