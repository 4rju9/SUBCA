<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ivGamesSingleItem"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/tv_games_title_single_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvMain"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@id/ivGamesSingleItem"
            android:layout_toEndOf="@id/ivGamesSingleItem" />

        <TextView
            android:id="@+id/tv_games_description_single_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvDescription"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_below="@id/tv_games_title_single_item"
            android:layout_toEndOf="@id/ivGamesSingleItem"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>