<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPanelOptions.ManageAllSubjects">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAS"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:background="@color/deepSkyBlue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newButtonAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textAdd"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteAllButtonAS"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDeleteAll"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvAS"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:text="@string/tvMain"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/deleteButtonAS"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_forever_24"
                app:tint="@color/black"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_corner_black_stroke"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>