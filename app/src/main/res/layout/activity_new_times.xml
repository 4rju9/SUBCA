<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanelOptions.NewTimes">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarNewMT"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:background="@color/deepSkyBlue"/>

    <TextView
        android:id="@+id/GreetingNewMT"
        android:layout_below="@id/toolbarNewMT"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textGuide1"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@id/GreetingNewMT"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editNameMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:hint="@string/hintTime"
            android:background="@drawable/rounded_corner_two"/>

        <EditText
            android:id="@+id/editTimesMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:inputType="text"
            android:hint="@string/hintTitleForSubjects"
            android:background="@drawable/rounded_corner_two"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="@string/textAddSubject"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:strokeColor="@color/deepSkyBlue"
            app:strokeWidth="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNextMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="@string/nextButton"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:strokeColor="@color/deepSkyBlue"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</RelativeLayout>